{
    "name": "PortF",
    "version": "0.12.0",
    "author": "MartinWecke",
    "private": true,
    "scripts": {
        "dev": "( sleep 2 && npm run message:dev ) & ( npx livereload './js/*.js, ./css/app.min.css' & npm run js:watch & npm run css:watch & npm run img:watch )",
        "js:watch": "onchange 'src/js/**/*.js' -- npm run js:build:dev",
        "js:build:dev": "npx webpack build --config ./webpack.dev.js",
        "js:build:prod": "npx webpack build --config ./webpack.prod.js",
        "css:watch": "onchange 'src/css/**/*.css' -- npm run css:build",
        "css:build": "npx postcss src/css/app.css -o css/app.min.css && npx postcss src/css/admin.css -o css/admin.min.css && npx postcss src/css/editor.css -o css/editor.min.css",
        "img:build": "npx imagemin src/img/* --out-dir=img",
        "img:watch": "onchange 'src/img/**/*' -- npm run img:build",
        "message:dev": "npx chalk yellow bold 'ðŸ‘€ Watching CSS, JS and images... ' && npx chalk yellow bold 'ðŸ”— Please connect your browserâ€™s livereload plugin...'",
        "build": "npm run js:build:prod && npm run css:build",
        "deploy": "npx deploy production"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.0",
        "autoprefixer": "^10.4.0",
        "babel-loader": "^8.2.3",
        "chalk-cli": "^5.0.0",
        "cssnano": "^4.1.10",
        "dploy": "^1.2.0",
        "imagemin": "^8.0.1",
        "imagemin-cli": "^7.0.0",
        "livereload": "^0.9.3",
        "onchange": "^7.1.0",
        "postcss": "^8.3.11",
        "postcss-cli": "^9.0.1",
        "postcss-color-function": "^4.1.0",
        "postcss-custom-media": "^8.0.0",
        "postcss-import": "^14.0.2",
        "postcss-inline-svg": "^5.0.0",
        "postcss-mixins": "^8.1.0",
        "postcss-nested": "^5.0.6",
        "postcss-partial-import": "^4.1.0",
        "postcss-scss": "^4.0.2",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1",
        "webpack-merge": "^5.8.0"
    },
    "dependencies": {
        "@superstructure.net/c": "^1.1.1",
        "@superstructure.net/e": "^1.3.2",
        "@superstructure.net/m": "^1.3.0",
        "@superstructure.net/s": "0.0.5",
        "lazysizes": "^5.3.2",
        "smoothscroll-polyfill": "^0.4.4"
    }
}
